<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Sprint And Relax</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        :root {
            --primary: #2563eb;
            --bg-light: #f8fafc;
        }
        body {
            background-color: var(--bg-light);
            color: #1e293b;
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            touch-action: manipulation;
        }
        
        .video-wrapper {
            position: relative;
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            background: #000;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
            aspect-ratio: 16 / 9;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        #main-video {
            width: 100%;
            height: 100%;
            object-fit: contain;
            transition: transform 0.1s ease-out;
            transform-origin: center center;
        }

        .zoom-controls {
            position: absolute;
            bottom: 15px;
            left: 15px;
            display: flex;
            flex-direction: column;
            gap: 8px;
            z-index: 50;
        }

        .control-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 4px;
            background: rgba(0,0,0,0.6);
            padding: 6px;
            border-radius: 12px;
            backdrop-filter: blur(8px);
        }

        .zoom-btn {
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(255,255,255,0.1);
            color: white;
            border-radius: 8px;
            font-weight: bold;
            transition: all 0.2s;
        }

        .zoom-btn:active {
            background: var(--primary);
            transform: scale(0.9);
        }

        input[type="range"] {
            accent-color: var(--primary);
        }
        .tab-active {
            color: var(--primary);
            border-bottom: 3px solid var(--primary);
        }
        .glass-card {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(226, 232, 240, 0.8);
        }
        .name-input {
            background: transparent;
            border: none;
            border-bottom: 1px dashed #cbd5e1;
            padding: 2px 0;
            outline: none;
            width: 100%;
            font-weight: 600;
            color: #475569;
        }
        .name-input:focus {
            border-bottom: 1px solid var(--primary);
            color: var(--primary);
        }
        .content-padding {
            padding-top: 100px;
        }
    </style>
</head>
<body class="antialiased">

    <header class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-md border-b border-slate-200">
        <div class="max-w-4xl mx-auto px-4">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between pt-3 pb-1">
                <div class="text-center sm:text-left">
                    <h1 class="text-xl font-black text-blue-600 tracking-tight leading-none">Sprint And Relax</h1>
                    <p class="text-[9px] font-bold text-slate-400 uppercase tracking-[0.2em] mt-1">Análisis de tiempos de velocidad</p>
                </div>
                <nav class="flex justify-center mt-2 sm:mt-0 gap-8">
                    <button id="tab-btn-analysis" class="py-2 text-xs font-black uppercase tab-active tracking-widest transition-all">Análisis</button>
                    <button id="tab-btn-history" class="py-2 text-xs font-black uppercase text-slate-400 tracking-widest transition-all">Historial</button>
                </nav>
            </div>
        </div>
    </header>

    <div class="content-padding max-w-4xl mx-auto px-4 pb-20">
        
        <!-- SECCIÓN ANÁLISIS -->
        <main id="view-analysis" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="glass-card p-4 rounded-2xl flex items-center justify-between shadow-sm">
                    <div class="flex flex-col">
                        <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">Ajustes</span>
                        <label class="text-sm font-bold text-slate-700">Distancia (metros)</label>
                    </div>
                    <div class="flex items-center gap-2 bg-slate-100 px-4 py-2 rounded-xl border border-slate-200">
                        <input type="number" id="race-distance" value="100" step="1" min="1" class="bg-transparent w-16 text-center font-bold text-blue-600 outline-none text-lg">
                    </div>
                </div>

                <div id="upload-section" class="w-full">
                    <label class="flex items-center justify-center w-full h-full min-h-[80px] border-2 border-dashed border-slate-300 rounded-2xl bg-white cursor-pointer hover:bg-slate-50 transition-all shadow-sm">
                        <div class="flex items-center gap-3 px-4 py-2">
                            <div class="bg-blue-50 p-2 rounded-full text-blue-500">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>
                            </div>
                            <span class="text-sm text-slate-600 font-bold italic">Cargar vídeo de carrera</span>
                        </div>
                        <input type="file" id="video-input" class="hidden" accept="video/*">
                    </label>
                </div>
            </div>

            <div id="player-section" class="hidden space-y-6">
                <div id="status-banner" class="hidden bg-blue-600 text-white text-center py-2 text-[10px] rounded-full font-black uppercase tracking-[0.2em] shadow-lg animate-pulse">
                    Modo Edición: Corredor <span id="editing-id"></span>
                </div>
                
                <div class="video-wrapper">
                    <video id="main-video" playsinline></video>
                    
                    <div class="zoom-controls">
                        <div class="flex gap-2 mb-1">
                            <button id="zoom-in" class="zoom-btn bg-blue-600/80">+</button>
                            <button id="zoom-out" class="zoom-btn bg-blue-600/80">-</button>
                            <button id="zoom-reset" class="zoom-btn bg-slate-800/80">⟲</button>
                        </div>
                        <div class="control-grid">
                            <div></div>
                            <button id="move-up" class="zoom-btn">↑</button>
                            <div></div>
                            <button id="move-left" class="zoom-btn">←</button>
                            <div class="flex items-center justify-center text-[10px] text-white/50 font-bold uppercase">Pan</div>
                            <button id="move-right" class="zoom-btn">→</button>
                            <div></div>
                            <button id="move-down" class="zoom-btn">↓</button>
                            <div></div>
                        </div>
                    </div>

                    <div id="overlay-time" class="absolute top-4 right-4 bg-black/60 backdrop-blur-md px-4 py-1.5 rounded-full text-sm font-black font-mono text-white border border-white/20 shadow-xl z-50">
                        00:00.000
                    </div>
                </div>

                <div class="max-w-2xl mx-auto space-y-4">
                    <input type="range" id="video-seeker" class="w-full h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer" min="0" step="0.001" value="0">
                    
                    <div class="flex justify-center items-center gap-4">
                        <button id="btn-prev-frame" class="bg-white border border-slate-200 w-14 h-14 rounded-2xl flex items-center justify-center text-slate-700 shadow-sm active:bg-slate-100">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path d="M8.445 14.832A1 1 0 0010 14V6a1 1 0 00-1.555-.832l-6 4a1 1 0 000 1.664l6 4zM16.445 14.832A1 1 0 0018 14V6a1 1 0 00-1.555-.832l-6 4a1 1 0 000 1.664l6 4z"></path></svg>
                        </button>
                        <button id="play-btn" class="bg-blue-600 w-20 h-20 rounded-3xl flex items-center justify-center text-white shadow-xl active:bg-blue-700">
                            <svg id="play-icon" class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20"><path d="M4.018 14L14.41 10 4.018 6z"></path></svg>
                        </button>
                        <button id="btn-next-frame" class="bg-white border border-slate-200 w-14 h-14 rounded-2xl flex items-center justify-center text-slate-700 shadow-sm active:bg-slate-100">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path d="M4.555 5.168A1 1 0 003 6v8a1 1 0 001.555.832l6-4a1 1 0 000-1.664l-6-4zM12.555 5.168A1 1 0 0011 6v8a1 1 0 001.555.832l6-4a1 1 0 000-1.664l-6-4z"></path></svg>
                        </button>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4 max-w-2xl mx-auto">
                    <button id="mark-start" class="bg-emerald-500 py-6 rounded-3xl font-black text-white shadow-lg flex flex-col items-center active:bg-emerald-600">
                        <span class="tracking-widest text-lg">SALIDA</span>
                        <span id="start-display" class="text-[10px] font-bold opacity-90 uppercase mt-1 tracking-tighter">Fijar Inicio</span>
                    </button>
                    <button id="mark-finish" class="bg-rose-500 py-6 rounded-3xl font-black text-white shadow-lg flex flex-col items-center active:bg-rose-600">
                        <span id="finish-btn-text" class="tracking-widest text-lg">META</span>
                        <span class="text-[10px] font-bold opacity-90 uppercase mt-1 tracking-tighter">Capturar marca</span>
                    </button>
                </div>

                <div class="glass-card rounded-3xl p-6 shadow-xl">
                    <div class="flex justify-between items-center mb-6 border-b border-slate-100 pb-4">
                        <h2 class="text-xs font-black uppercase text-slate-400 tracking-[0.2em]">Marcas capturadas</h2>
                        <button id="save-session-btn" class="bg-blue-600 px-6 py-2.5 rounded-full text-white text-[10px] font-black uppercase tracking-widest transition shadow-lg hover:bg-blue-700 active:scale-95">
                            Guardar Sesión
                        </button>
                    </div>
                    <div id="results-list" class="grid grid-cols-1 md:grid-cols-2 gap-4"></div>
                </div>
            </div>
        </main>

        <!-- SECCIÓN HISTORIAL -->
        <main id="view-history" class="hidden space-y-8 animate-in fade-in duration-500">
            <div class="flex justify-between items-center">
                <h2 class="text-3xl font-black text-slate-800 tracking-tight">Historial</h2>
            </div>
            <div id="history-container" class="grid grid-cols-1 md:grid-cols-2 gap-6"></div>
            <div id="history-empty" class="text-center py-20 hidden">
                <p class="text-slate-400 text-lg font-medium italic">No hay datos guardados.</p>
            </div>
        </main>
    </div>

    <script>
        // Referencias DOM
        const videoInput = document.getElementById('video-input');
        const mainVideo = document.getElementById('main-video');
        const seeker = document.getElementById('video-seeker');
        const playBtn = document.getElementById('play-btn');
        const playIcon = document.getElementById('play-icon');
        const overlayTime = document.getElementById('overlay-time');
        const markStartBtn = document.getElementById('mark-start');
        const markFinishBtn = document.getElementById('mark-finish');
        const resultsList = document.getElementById('results-list');
        const startDisplay = document.getElementById('start-display');
        const saveSessionBtn = document.getElementById('save-session-btn');
        const historyContainer = document.getElementById('history-container');
        const historyEmpty = document.getElementById('history-empty');
        const distanceInput = document.getElementById('race-distance');

        let startTime = null;
        let finishers = [];   
        let editingIndex = null;

        // Zoom & Pan Logic
        let scale = 1, posX = 0, posY = 0;
        function updateTransform() { mainVideo.style.transform = `scale(${scale}) translate(${posX}px, ${posY}px)`; }
        document.getElementById('zoom-in').onclick = () => { scale = Math.min(5, scale + 0.25); updateTransform(); };
        document.getElementById('zoom-out').onclick = () => { scale = Math.max(1, scale - 0.25); if(scale === 1) { posX = 0; posY = 0; } updateTransform(); };
        document.getElementById('zoom-reset').onclick = () => { scale = 1; posX = 0; posY = 0; updateTransform(); };
        document.getElementById('move-up').onclick = () => { posY += 20 / scale; updateTransform(); };
        document.getElementById('move-down').onclick = () => { posY -= 20 / scale; updateTransform(); };
        document.getElementById('move-left').onclick = () => { posX += 20 / scale; updateTransform(); };
        document.getElementById('move-right').onclick = () => { posX -= 20 / scale; updateTransform(); };

        // Helper: Formato de tiempo
        function formatTime(seconds) {
            if (seconds === null || isNaN(seconds)) return "00:00.000";
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            const ms = Math.floor((seconds % 1) * 1000);
            return `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}.${ms.toString().padStart(3, '0')}`;
        }

        // Storage Helpers
        function getStorage() { return JSON.parse(localStorage.getItem('sprint_timer_sessions') || '[]'); }
        function saveToStorage(data) { localStorage.setItem('sprint_timer_sessions', JSON.stringify(data)); }

        // Video Event Listeners
        videoInput.onchange = (e) => {
            const file = e.target.files[0];
            if (file) {
                mainVideo.src = URL.createObjectURL(file);
                document.getElementById('upload-section').classList.add('hidden');
                document.getElementById('player-section').classList.remove('hidden');
            }
        };
        mainVideo.onloadedmetadata = () => { seeker.max = mainVideo.duration; };
        mainVideo.ontimeupdate = () => {
            seeker.value = mainVideo.currentTime;
            overlayTime.innerText = formatTime(mainVideo.currentTime);
        };
        seeker.oninput = () => { mainVideo.currentTime = seeker.value; };

        playBtn.onclick = () => {
            if (mainVideo.paused) {
                mainVideo.play();
                playIcon.innerHTML = '<path d="M10 18a8 8 0 100-16 8 8 0 000 16zM8 7a1 1 0 00-1 1v4a1 1 0 001 1h4a1 1 0 001-1V8a1 1 0 00-1-1H8z"></path>';
            } else {
                mainVideo.pause();
                playIcon.innerHTML = '<path d="M4.018 14L14.41 10 4.018 6z"></path>';
            }
        };

        document.getElementById('btn-prev-frame').onclick = () => { mainVideo.pause(); mainVideo.currentTime = Math.max(0, mainVideo.currentTime - 1/60); };
        document.getElementById('btn-next-frame').onclick = () => { mainVideo.pause(); mainVideo.currentTime = Math.min(mainVideo.duration, mainVideo.currentTime + 1/60); };

        // Captura de Marcas
        markStartBtn.onclick = () => {
            startTime = mainVideo.currentTime;
            startDisplay.innerText = formatTime(startTime);
            updateResultsTable();
        };

        markFinishBtn.onclick = () => {
            if (editingIndex !== null) {
                finishers[editingIndex].time = mainVideo.currentTime;
                editingIndex = null;
                document.getElementById('status-banner').classList.add('hidden');
                markFinishBtn.classList.replace('bg-blue-600', 'bg-rose-500');
                document.getElementById('finish-btn-text').innerText = "META";
            } else {
                finishers.push({ id: Date.now(), time: mainVideo.currentTime, name: `Corredor ${finishers.length + 1}` });
            }
            updateResultsTable();
        };

        // Renderizado de tabla de resultados actuales
        function updateResultsTable() {
            resultsList.innerHTML = '';
            // Obtenemos la distancia actual como número
            const dist = parseFloat(distanceInput.value) || 0;
            
            finishers.forEach((f, i) => {
                const diff = (startTime !== null) ? (f.time - startTime) : null;
                // Cálculo de velocidad: (Distancia / Tiempo en seg) * 3.6 para km/h
                const speed = (diff > 0 && dist > 0) ? (dist / diff * 3.6).toFixed(2) : "0.00";
                
                const div = document.createElement('div');
                div.className = "flex justify-between items-center p-5 rounded-2xl border bg-slate-50 border-slate-100";
                div.innerHTML = `
                    <div class="flex flex-col flex-1 mr-4">
                        <input type="text" value="${f.name}" data-idx="${i}" class="name-edit-input name-input text-[11px] uppercase tracking-wider mb-1">
                        <div class="flex items-baseline gap-3">
                            <span class="text-2xl font-black font-mono text-slate-800">${diff !== null ? formatTime(diff) : '--:--.---'}</span>
                            <span class="text-[10px] bg-emerald-500 text-white px-2 py-1 rounded-full font-black">${speed} km/h</span>
                        </div>
                    </div>
                    <div class="flex flex-col gap-3">
                        <button data-action="edit" data-idx="${i}" class="text-[10px] font-black uppercase text-blue-600">Editar</button>
                        <button data-action="delete" data-id="${f.id}" class="text-[10px] font-black uppercase text-slate-300">Borrar</button>
                    </div>`;
                resultsList.appendChild(div);
            });
        }

        // Delegación de eventos para la lista de resultados
        resultsList.onclick = (e) => {
            const action = e.target.dataset.action;
            if (action === 'edit') {
                editingIndex = parseInt(e.target.dataset.idx);
                mainVideo.currentTime = finishers[editingIndex].time;
                document.getElementById('status-banner').classList.remove('hidden');
                document.getElementById('editing-id').innerText = editingIndex + 1;
                markFinishBtn.classList.replace('bg-rose-500', 'bg-blue-600');
                document.getElementById('finish-btn-text').innerText = "ACTUALIZAR";
            } else if (action === 'delete') {
                finishers = finishers.filter(f => f.id !== parseInt(e.target.dataset.id));
                updateResultsTable();
            }
        };

        resultsList.oninput = (e) => {
            if (e.target.classList.contains('name-edit-input')) finishers[parseInt(e.target.dataset.idx)].name = e.target.value;
        };

        // Escuchar cambios en el input de distancia para recalcular al vuelo
        distanceInput.oninput = () => {
            updateResultsTable();
        };

        // Guardar Sesión
        saveSessionBtn.onclick = () => {
            if (finishers.length === 0 || startTime === null) return;
            const currentDist = parseFloat(distanceInput.value) || 0;
            
            const session = {
                id: Date.now(),
                date: new Date().toLocaleString('es-ES', { day:'numeric', month:'short', hour:'2-digit', minute:'2-digit' }),
                distance: currentDist,
                results: finishers.map(f => {
                    const diff = f.time - startTime;
                    return { 
                        name: f.name, 
                        time: diff, 
                        speed: (diff > 0 && currentDist > 0) ? (currentDist / diff * 3.6).toFixed(2) : "0.00" 
                    };
                })
            };
            const data = getStorage();
            data.unshift(session);
            saveToStorage(data);
            
            // Limpiar interfaz
            startTime = null; 
            finishers = [];
            startDisplay.innerText = 'Fijar Inicio';
            updateResultsTable();
            switchTab('history');
        };

        // Borrado de sesión
        function deleteSession(id) {
            const data = getStorage().filter(s => s.id !== id);
            saveToStorage(data);
            renderHistory();
        }

        // Renderizado del historial
        function renderHistory() {
            const data = getStorage();
            historyContainer.innerHTML = '';
            if (!data.length) { historyEmpty.classList.remove('hidden'); return; }
            historyEmpty.classList.add('hidden');
            
            data.forEach((session) => {
                const div = document.createElement('div');
                div.className = "bg-white rounded-3xl p-6 border border-slate-100 shadow-lg relative";
                let rows = session.results.map(r => `
                    <div class="flex justify-between items-center py-3 border-b border-slate-50 last:border-0">
                        <div>
                            <span class="text-[10px] text-slate-400 font-black uppercase block">${r.name}</span>
                            <span class="font-mono text-blue-600 font-black text-xl">${formatTime(r.time)}</span>
                        </div>
                        <div class="text-right">
                            <span class="text-sm font-black text-slate-800">${r.speed} km/h</span>
                        </div>
                    </div>`).join('');

                div.innerHTML = `
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <span class="text-[10px] font-black text-blue-500 uppercase tracking-widest mb-1 block">${session.date}</span>
                            <h3 class="text-lg font-black text-slate-800">${session.distance}m</h3>
                        </div>
                        <button class="history-delete-btn p-3 -mr-3 text-slate-200 hover:text-rose-500 transition-colors active:scale-90">
                            <svg class="w-6 h-6 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                        </button>
                    </div>
                    <div class="space-y-1">${rows}</div>`;
                
                // Eventos de borrado (sin confirm bloqueante)
                const btn = div.querySelector('.history-delete-btn');
                const handleDel = (e) => {
                    e.preventDefault();
                    e.stopPropagation();
                    deleteSession(session.id);
                };
                btn.onclick = handleDel;
                btn.ontouchend = handleDel; 
                
                historyContainer.appendChild(div);
            });
        }

        // Navegación de pestañas
        function switchTab(tab) {
            if (tab === 'analysis') {
                document.getElementById('view-analysis').classList.remove('hidden'); 
                document.getElementById('view-history').classList.add('hidden');
                document.getElementById('tab-btn-analysis').classList.add('tab-active'); 
                document.getElementById('tab-btn-history').classList.remove('tab-active');
            } else {
                document.getElementById('view-analysis').classList.add('hidden'); 
                document.getElementById('view-history').classList.remove('hidden');
                document.getElementById('tab-btn-history').classList.add('tab-active'); 
                document.getElementById('tab-btn-analysis').classList.remove('tab-active');
                renderHistory();
            }
        }
        document.getElementById('tab-btn-analysis').onclick = () => switchTab('analysis');
        document.getElementById('tab-btn-history').onclick = () => switchTab('history');
    </script>
</body>
</html>
